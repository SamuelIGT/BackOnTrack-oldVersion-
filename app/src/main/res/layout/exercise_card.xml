<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="4dp">


        <RelativeLayout
            android:id="@+id/grid_layout_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/revisedColor2">

            <ImageView
                android:id="@+id/thumbnail_view"
                android:layout_width="match_parent"
                android:background="@color/white_view"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail_view"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:text="TESTE BACK ON TRACK"
                android:textColor="@color/revisedTextUnfocused"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_text"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="TESTE"
                android:textColor="@color/revisedColor7"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description_text"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:text="@string/start_exercise"
                android:textColor="@color/revisedAccent" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/view_card_lock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:src="@drawable/ic_lock"
            android:clickable="true"
            android:background="@drawable/gradient">
        </ImageView>
    </android.support.v7.widget.CardView>

</LinearLayout><!--
