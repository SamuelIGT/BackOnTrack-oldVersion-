<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@drawable/dialog_confirmation_layout_bg"
        android:orientation="vertical">

    <TextView
        android:id="@+id/txt_confirmation_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/exercise_finish_confirmation"
        android:textColor="@color/primary_text"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white_view_background"/>

    <RelativeLayout
        android:id="@+id/layout_timer_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/ic_stopwatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_stopwatch" />

        <TextView
            android:id="@+id/txt_time_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ic_stopwatch"
            android:text="@string/timer_start"
            android:textSize="20sp"
            android:textColor="@color/primary_text"/>

        <LinearLayout
            android:id="@+id/layout_time_result_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ic_stopwatch"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:textSize="12sp"
                android:text="@string/timer_min_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/timer_sec_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textSize="12sp"
                android:text="@string/timer_mil_description" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@color/white_view_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/txt_effort_exercise_confirmation"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/layout_emoticons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ic_emotion_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_emoticon_1_64dp"
                />

            <ImageButton
                android:id="@+id/ic_emotion_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_emoticon_2_64dp" />

            <ImageButton
                android:id="@+id/ic_emotion_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_emoticon_3_64dp" />

            <ImageButton
                android:id="@+id/ic_emotion_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_emoticon_4_64dp" />

            <ImageButton
                android:id="@+id/ic_emotion_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_emoticon_5_64dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_emoticons_titles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_emoticons"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_very_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="@string/emoticon1_title"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txt_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/emoticon2_title"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txt_moderate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/emoticon3_title"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txt_hard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/emoticon4_title"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/txt_very_hard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/emoticon5_title"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_motivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout_emoticons_titles"
            android:text="@string/txt_motivation"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_motivation"
            android:background="@drawable/button_confirmation_shape"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/btn_confirm"
            android:textColor="@color/white_view"
            android:textSize="26sp" />

    </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_close_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close2"
        android:background="?attr/selectableItemBackgroundBorderless"/>
</LinearLayout>