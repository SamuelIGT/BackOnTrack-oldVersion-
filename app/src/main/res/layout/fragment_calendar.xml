<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/card_background">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/newColorAccent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_previous_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_previous_date"/>

                    <TextView
                        android:id="@+id/txt_month_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maio - 2017"
                        android:textColor="@color/newPrimaryText"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/btn_next_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_next_date"/>

                </LinearLayout>

                <com.github.sundeepk.compactcalendarview.CompactCalendarView
                    android:id="@+id/view_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:compactCalendarBackgroundColor="@color/newColorAccent"
                    app:compactCalendarCurrentDayBackgroundColor="@color/primary_light"
                    app:compactCalendarCurrentSelectedDayBackgroundColor="@color/calendar_day"
                    app:compactCalendarMultiEventIndicatorColor="@color/colorPrimary"
                    app:compactCalendarTargetHeight="250dp"
                    app:compactCalendarTextColor="@color/newPrimaryText"
                    app:compactCalendarTextSize="12sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            app:cardBackgroundColor="@color/newColorAccent"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@color/newColorAccent"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calendar_average_txt"
                    android:paddingBottom="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/newPrimaryText"
                    android:textSize="20sp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="38.3dp"
                        android:background="@color/primary_text">

                    </View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="38.3dp"
                        android:background="@color/primary_text">

                    </View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="38.3dp"
                        android:background="@color/primary_text">

                    </View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="38.3dp"
                        android:background="@color/primary_text">

                    </View>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="38.3dp"
                        android:background="@color/primary_text">

                    </View>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_chart_bars"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="29dp"
                    android:orientation="horizontal">

                    <ProgressBar
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="70"
                        android:progressDrawable="@drawable/pgbar_graph_shape" />

                    <ProgressBar
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:max="100"
                        android:progress="15"
                        android:progressDrawable="@drawable/pgbar_graph_shape" />

                    <ProgressBar
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:max="100"
                        android:progress="5"
                        android:progressDrawable="@drawable/pgbar_graph_shape" />

                    <ProgressBar
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:max="100"
                        android:progress="10"
                        android:progressDrawable="@drawable/pgbar_graph_shape" />

                    <ProgressBar
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/pgbar_graph_shape" />

                    <ProgressBar
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/pgbar_graph_shape" />

                    <ProgressBar
                        style="@style/CustomProgressBarHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/pgbar_graph_shape" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="227dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/primary_text">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="230dp"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:textSize="12sp"
                        android:background="@android:color/transparent"
                        android:textAlignment="center"
                        android:text="@string/calendar_dom" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="5dp"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:text="@string/calendar_seg" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="5dp"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:text="@string/calendar_ter" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="5dp"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:text="@string/calendar_qua" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="5dp"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle=""
                        android:text="@string/calendar_qui" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="5dp"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:text="@string/calendar_sex" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="5dp"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:text="@string/calendar_sab" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_emoticon_1_filled"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="3.3dp"
                        android:src="@drawable/ic_emoticon_2_filled"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="3.3dp"
                        android:src="@drawable/ic_emoticon_3_filled"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="3.3dp"
                        android:src="@drawable/ic_emoticon_4_filled"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="3.3dp"
                        android:src="@drawable/ic_emoticon_5_filled"/>


                </LinearLayout>

            </RelativeLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>


</ScrollView>

